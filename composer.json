{
  "name": "yourorg/clean-mvc-skeleton",
  "description": "Clean Architecture MVC skeleton (Framework + App layers)",
  "type": "project",
  "require": {
    "php": ">=8.1",
    "phpmailer/phpmailer": "^7.0"
  },
  "require-dev": {
    "jetbrains/phpstorm-stubs": "*"
  },
  "suggest": {
    "ext-redis": "Required for Redis cache and queue drivers",
    "ext-pdo_mysql": "Required for MySQL database support",
    "ext-pdo_pgsql": "Required for PostgreSQL database support"
  },
  "autoload": {
    "psr-4": {
      "Toporia\\Framework\\": "src/Framework/",
      "App\\": "src/App/"
    },
    "files": [
      "src/Framework/Support/helpers.php"
    ]
  }
}
